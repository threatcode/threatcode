                  "fields": {
                    "security": {
                      "type": "text",
                      "analyzer": "es_security_analyzer"
                    }
                  }
                },
                "full_name": {
                  "fields": {
                    "security": {
                      "type": "text",
                      "analyzer": "es_security_analyzer"
                    }
                  },
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "group": {
                  "properties": {
                    "domain": {
                      "ignore_above": 1024,
                      "type": "keyword",
                      "fields": {
                        "security": {
                          "type": "text",
                          "analyzer": "es_security_analyzer"
                        }
                      }
                    },
                    "id": {
                      "ignore_above": 1024,
                      "type": "keyword",
                      "fields": {
                        "security": {
                          "type": "text",
                          "analyzer": "es_security_analyzer"
                        }
                      }
                    },
                    "name": {
                      "ignore_above": 1024,
                      "type": "keyword",
                      "fields": {
                        "security": {
                          "type": "text",
                          "analyzer": "es_security_analyzer"
                        }
                      }
                    }
                  }
                },
                "hash": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "security": {
                      "type": "text",
                      "analyzer": "es_security_analyzer"
                    }
                  }
                },
                "id": {
                  "ignore_above": 1024,
                  "type": "keyword",
                  "fields": {
                    "security": {
                      "type": "text",
                      "analyzer": "es_security_analyzer"
                    }
                  }
                },
                "name": {
                  "fields": {
                    "security": {
                      "type": "text",
