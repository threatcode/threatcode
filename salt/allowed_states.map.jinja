          'ssl',
          'telegraf',
          'firewall',
          'schedule',
          'docker_clean'
          ],
      'tc-workstation': [
          ],
  }, grain='role') %}

  {% if FILEBEAT and grains.role in ['tc-helixsensor', 'tc-eval', 'tc-manager', 'tc-standalone', 'tc-node', 'tc-managersearch', 'tc-heavynode', 'tc-import', 'tc-receiver'] %}
    {% do allowed_states.append('filebeat') %}
  {% endif %}

  {% if ((FLEETMANAGER or FLEETNODE) or PLAYBOOK != 0) and grains.role in ['tc-eval', 'tc-manager', 'tc-managersearch', 'tc-standalone'] %}
    {% do allowed_states.append('mysql') %}
  {% endif %}

  {% if (FLEETMANAGER or FLEETNODE) and grains.role in ['tc-sensor', 'tc-eval', 'tc-manager', 'tc-standalone', 'tc-node', 'tc-managersearch', 'tc-heavynode', 'tc-receiver'] %}
    {% do allowed_states.append('fleet.install_package') %}
  {% endif %}

  {% if (FLEETMANAGER or FLEETNODE) and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch', 'tc-heavynode'] %}
    {% do allowed_states.append('fleet') %}
  {% endif %}

  {% if (FLEETMANAGER or FLEETNODE) and grains.role in ['tc-eval'] %}
    {% do allowed_states.append('redis') %}
  {% endif %}

  {%- if ZEEKVER != 'SURICATA' and grains.role in ['tc-sensor', 'tc-eval', 'tc-standalone', 'tc-heavynode'] %}
    {% do allowed_states.append('zeek') %}
  {%- endif %}

  {% if STRELKA and grains.role in ['tc-sensor', 'tc-eval', 'tc-standalone', 'tc-heavynode'] %}
    {% do allowed_states.append('strelka') %}
  {% endif %}

  {% if WAZUH and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-node', 'tc-managersearch', 'tc-heavynode', 'tc-receiver','tc-idh']%}
    {% do allowed_states.append('wazuh') %}
  {% endif %}

  {% if ELASTICSEARCH and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-node', 'tc-managersearch', 'tc-heavynode', 'tc-import'] %}
    {% do allowed_states.append('elasticsearch') %}
  {% endif %}

  {% if ELASTICSEARCH and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch', 'tc-import'] %}
    {% do allowed_states.append('elasticsearch.auth') %}
  {% endif %}

  {% if KIBANA and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch', 'tc-import'] %}
    {% do allowed_states.append('kibana') %}
    {% do allowed_states.append('kibana.secrets') %}
  {% endif %}

  {% if grains.role in ['tc-eval', 'tc-standalone', 'tc-node', 'tc-managersearch', 'tc-heavynode', 'tc-manager'] %}
    {% do allowed_states.append('curator') %}
  {% endif %}

  {% if ELASTALERT and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch'] %}
    {% do allowed_states.append('elastalert') %}
  {% endif %}

  {% if (PLAYBOOK !=0) and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch'] %}
    {% do allowed_states.append('playbook') %}
  {% endif %}

  {% if (PLAYBOOK !=0) and grains.role in ['tc-eval'] %}
    {% do allowed_states.append('redis') %}
  {% endif %}

  {% if (FREQSERVER !=0) and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch'] %}
    {% do allowed_states.append('freqserver') %}
  {% endif %}

  {% if (DOMAINSTATS !=0) and grains.role in ['tc-eval', 'tc-manager', 'tc-standalone', 'tc-managersearch'] %}
    {% do allowed_states.append('domainstats') %}
  {% endif %}

  {% if LOGSTASH and grains.role in ['tc-helixsensor', 'tc-manager', 'tc-standalone', 'tc-node', 'tc-managersearch', 'tc-heavynode', 'tc-receiver'] %}
    {% do allowed_states.append('logstash') %}
  {% endif %}

  {% if REDIS and grains.role in ['tc-manager', 'tc-standalone', 'tc-managersearch', 'tc-heavynode', 'tc-receiver'] %}
    {% do allowed_states.append('redis') %}
  {% endif %}

  {% if grains.os == 'CentOS' %}
    {% if not ISAIRGAP %}
      {% do allowed_states.append('yum') %}
    {% endif %}
    {% do allowed_states.append('yum.packages') %}
  {% endif %}

  {# all nodes on the right salt version can run the following states #}
  {% do allowed_states.append('common') %}
  {% do allowed_states.append('patch.os.schedule') %}
  {% do allowed_states.append('motd') %}
  {% do allowed_states.append('salt.minion-check') %}
  {% do allowed_states.append('sensoroni') %}
  {% do allowed_states.append('salt.lasthighstate') %}

{% endif %}


{% if ISAIRGAP %}
  {% do allowed_states.append('airgap') %}
{% endif %}

{# all nodes can always run salt.minion state #}
{% do allowed_states.append('salt.minion') %}
