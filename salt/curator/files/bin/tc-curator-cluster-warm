#!/bin/bash
#


APP=warm
lf=/tmp/$APP-pidLockFile
# create empty lock file if none exists
cat /dev/null >> $lf
read lastPID < $lf
# if lastPID is not null and a process with that pid exists , exit
[ ! -z "$lastPID" -a -d /proc/$lastPID ] && exit
echo $$ > $lf

{% from 'filebeat/modules.map.jinja' import MODULESMERGED with context %}

docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-zeek-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-beats-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-firewall-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-ids-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-import-warm.yml > /dev/null 2>&1;
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-kratos-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-osquery-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-ossec-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-strelka-warm.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-syslog-warm.yml > /dev/null 2>&1;
{% for INDEX in MODULESMERGED.modules.keys() -%}
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-{{ INDEX }}-warm.yml > /dev/null 2>&1{% if not loop.last %};{% endif %}
{% endfor -%}
