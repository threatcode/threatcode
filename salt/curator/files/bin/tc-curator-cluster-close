#!/bin/bash
#


APP=close
lf=/tmp/$APP-pidLockFile
# create empty lock file if none exists
cat /dev/null >> $lf
read lastPID < $lf
# if lastPID is not null and a process with that pid exists , exit
[ ! -z "$lastPID" -a -d /proc/$lastPID ] && exit
echo $$ > $lf

{% from 'filebeat/modules.map.jinja' import MODULESMERGED with context %}

docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-zeek-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-beats-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-firewall-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-ids-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-import-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-kratos-close.yml > /dev/null 2>&1;
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-osquery-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-ossec-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-strelka-close.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-syslog-close.yml > /dev/null 2>&1;
{% for INDEX in MODULESMERGED.modules.keys() -%}
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-{{ INDEX }}-close.yml > /dev/null 2>&1{% if not loop.last %};{% endif %}
{% endfor -%}
