#!/bin/bash
#


APP=delete
lf=/tmp/$APP-pidLockFile
# create empty lock file if none exists
cat /dev/null >> $lf
read lastPID < $lf
# if lastPID is not null and a process with that pid exists , exit
[ ! -z "$lastPID" -a -d /proc/$lastPID ] && exit
echo $$ > $lf

{% from 'filebeat/modules.map.jinja' import MODULESMERGED with context %}

docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-zeek-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-beats-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-firewall-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-ids-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-import-delete.yml > /dev/null 2>&1;
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-kratos-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-osquery-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-ossec-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-strelka-delete.yml > /dev/null 2>&1; 
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-syslog-delete.yml > /dev/null 2>&1;
{% for INDEX in MODULESMERGED.modules.keys() -%}
docker exec tc-curator curator --config /etc/curator/config/curator.yml /etc/curator/action/tc-{{ INDEX }}-delete.yml > /dev/null 2>&1{% if not loop.last %};{% endif %}
{% endfor -%}
