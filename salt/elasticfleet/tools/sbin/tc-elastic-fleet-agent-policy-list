. /usr/sbin/so-elastic-fleet-common

# Let's snag a cookie from Kibana
SESSIONCOOKIE=$(curl -K /opt/tc/conf/elasticsearch/curl.config -c - -X GET http://localhost:5601/ | grep sid | awk '{print $7}')

# List configured agent policies
curl -s -K /opt/tc/conf/elasticsearch/curl.config -b "sid=$SESSIONCOOKIE" -L -X GET "localhost:5601/api/fleet/agent_policies" | jq

echo
